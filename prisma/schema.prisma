// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  pass  String  
}

model Type {
  id        Int   @id @default(autoincrement())
  name      String
  outs      Out[]
  products  Product[]
}

model Out {
  id        Int   @id @default(autoincrement())
  name      String
  type_id   Int
  type      Type  @relation(fields: [type_id], references: [id])
  products  Product[]
}

model Product {
  id        Int     @id @default(autoincrement())
  name      String
  title     String  @unique
  title_en  String  @unique
  img       String
  html      String 
  type_id   Int
  out_id    Int?
  type      Type    @relation(fields: [type_id], references: [id])
  out       Out?    @relation(fields: [out_id], references: [id])
}

model Project {
  id        Int   @id @default(autoincrement())
  name        String
  project     String
  quantity    String
  year        Int
  enduser     String
  description String?
  img         String
}